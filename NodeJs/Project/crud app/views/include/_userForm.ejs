<form method="post" action="/api/users"  id="add_user">
    <div class="new_user">
        <div class="form-group">
            <input type="hidden" name="id" value="">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" id="name" placeholder="Name" required>
         </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="Email" name="email" id="Email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio", name="gender" value="Male" id="Male" required>
                <Label for="Male" class="radio-lable">Male</Label>
            </div>
            <div class="radio inline">
                <input type="radio", name="gender" value="Female" id="Female" required>
                <Label for="Female" class="radio-lable">Female</Label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio", name="status" value="Active" id="Active" required>
                <Label for="Active" class="radio-lable">Active</Label>
            </div>
            <div class="radio inline">
                <input type="radio", name="status" value="Inactive" id="Inactive" required>
                <Label for="Inactive" class="radio-lable">Inactive</Label>
            </div>
        </div>
            <div class="form-group">
                <button type="submit" class="btn text-btn">Submit</button>
            </div>
    </div>
</form>